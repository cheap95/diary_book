<p id="notice"><%="notice"%></p>
<%= render "shared/header" %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>日記</th>
      <%# <th>登録日時</th>
      <th>更新日時</th> %>
    </tr> 
  </thead>

  <tbody>

    <% @diary.each do |d|%>
      <tr>
        <td><%= d.id %></td>
        <td><%= d.title %></td>
        <td><%= d.body %></td>
        <%#<td><%= d.created_at %><%#</td>%>
        <%# <td><%= d.updated_at %><%#</td>%>
        <td><%= link_to '詳細', d %></td>
        <td><%= link_to '編集', edit_diary_path(d) %></td>
        <td><%= link_to '削除', d, method: :delete, data: { confirm: "削除してよろしいでしょうか？\r＊削除内容は元には戻りません＊"} %></td>
    <% end %>
  </tbody>
</table>

